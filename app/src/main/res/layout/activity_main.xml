<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#1f1f2e"
    tools:context=".MainActivity"
    >

    <Button
        android:id="@+id/add_btn"
        style="@style/Widget.AppCompat.Button"
        android:layout_width="101dp"
        android:layout_height="92dp"
        android:layout_marginStart="68dp"
        android:layout_marginLeft="68dp"
        android:layout_marginTop="168dp"
        android:background="#9595b7"
        android:shadowColor="#00706767"
        android:text="@string/add_btn"
        android:textColor="@android:color/background_light"
        android:textColorHighlight="@android:color/background_light"
        android:textColorHint="@android:color/darker_gray"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Add Creditor" />


    <TextView
        android:id="@+id/txt_addcreditor"
        android:layout_width="243dp"
        android:layout_height="52dp"
        android:layout_marginStart="84dp"
        android:layout_marginLeft="84dp"
        android:layout_marginTop="52dp"
        android:background="#52527a "
        android:cursorVisible="true"
        android:text="@string/txt_creditor"
        android:textAlignment="center"
        android:textColor="@android:color/background_light"
        android:textColorHighlight="@android:color/background_light"
        android:textColorHint="@android:color/background_light"
        android:textColorLink="@android:color/background_light"
        android:textCursorDrawable="@android:drawable/alert_light_frame"
        android:textSize="30sp"
        app:fontFamily="serif"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="CREDITORS" />

    <Button
        android:id="@+id/view_btn"
        style="@style/Widget.AppCompat.Button"
        android:layout_width="101dp"
        android:layout_height="92dp"
        android:layout_marginStart="224dp"
        android:layout_marginLeft="224dp"
        android:layout_marginTop="168dp"
        android:background="#9595b7"
        android:shadowColor="#00706767"
        android:text="@string/view_btn"
        android:textColor="@android:color/background_light"
        android:textColorHighlight="@android:color/background_light"
        android:textColorHint="@android:color/darker_gray"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="View Creditor" />


</androidx.constraintlayout.widget.ConstraintLayout>